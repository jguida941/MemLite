# Apple UI Styling Reference: This project aims to match Apple's dark mode aesthetic with translucent dark grey backgrounds and light text.
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
indent_style = space
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true